<form method="post" action="{{ path('director_delete', {'id': director.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ director.id) }}">
    <button class="button alt">Delete</button>
</form>
