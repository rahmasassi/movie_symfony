{% extends 'base.html.twig' %}


{% block body %}
    <section id="banner">
        <div class="inner">
            <h1>Free Movies </h1>

            <ul class="actions">

            </ul>
        </div>
    </section>
    <section class="section intro">
        <div class="container">
            <div class="row ">
                <div class="col-lg-8">
                    <div class="section-title">
                        <br><br>
                        <h2 class="mt-3 content-title">Amusez-vous!</h2>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                {% for movie in movies %}
                <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                    <div class="card product-item border-0 mb-4">
                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0" >
                            <video src="/video/{{ movie.video }}" height="250" width="360" controls></video>
                        </div>
                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                            <h6 class="text-truncate mb-3">{{ movie.name }}</h6>
                            <h7>{{ movie.synopsis }}</h7>
                            <div class="d-flex justify-content-center">
                                <h6></h6>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                            <a href="{{ path('movie_rate', {id: movie.id}) }}" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>


        </div>
    </section>
    <br><br><br>
{% endblock %}