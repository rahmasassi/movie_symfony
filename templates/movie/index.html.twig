{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block body %}

    <section class="main">
        <div class ="container">
            <h2>Movie Index</h2>
            <div class="table-responsive">
                <table class="table" id="table-genre">
                    <thead>
                    <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Year</th>
                <th>Rating</th>
                <th>MainCast</th>
                <th>Synopsis</th>
                        <th>Film</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.name }}</td>
                <td>{{ movie.year }}</td>
                <td>{{ movie.rating }}</td>
                <td>{{ movie.mainCast }}</td>
                <td>{{ movie.synopsis }}</td>
                <td>
                    <video src="/video/{{ movie.video }}" height="200" width="300" controls></video>               </td>
                <td>
                    <a href="{{ path('movie_show', {'id': movie.id}) }}" style="color: #B0413E">show</a>
                    <a href="{{ path('movie_edit', {'id': movie.id}) }}" style="color: #B0413E">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <div class="list">
    <a href="{{ path('movie_new') }}" class="button alt">Create new</a>
    </div>
        </div>
    </section>
{% endblock %}
